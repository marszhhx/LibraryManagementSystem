@model List<LibraryManagement.ViewModels.AuthorViewModel>

<h2>Authors</h2>

<a asp-action="Create" class="btn btn-success">Add New Author</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Author Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.AuthorId</td>
            <td>@author.AuthorName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-primary">Update</a>
                <form asp-action="Delete" asp-route-id="@author.AuthorId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

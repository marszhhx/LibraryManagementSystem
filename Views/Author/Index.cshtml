@model List<LibraryManagement.ViewModels.AuthorViewModel>

<h2>Authors</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.AuthorId</td>
            <td>@author.AuthorName</td>
            <td><a asp-action="Details" asp-route-id="@author.AuthorId">Details</a></td>
        </tr>
    }
    </tbody>
</table>
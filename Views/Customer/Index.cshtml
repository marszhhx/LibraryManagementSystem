@model List<LibraryManagement.ViewModels.CustomerViewModel>

<h2>Customers</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Customer Name</th>
        <th>Details<th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.CustomerId</td>
            <td>@customer.CustomerName</td>
            <td><a asp-action="Details" asp-route-id="@customer.CustomerId">Details</a></td>
        </tr>
    }
    </tbody>
</table>
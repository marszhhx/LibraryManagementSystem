@model List<LibraryManagement.ViewModels.CustomerViewModel>

<h2>Customers</h2>

<a asp-action="Create" class="btn btn-success">Add New Customer</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Customer Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.CustomerId</td>
            <td>@customer.CustomerName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-primary">Update</a>
                <form asp-action="Delete" asp-route-id="@customer.CustomerId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>